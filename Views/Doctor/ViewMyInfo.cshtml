@model List<HealthcareFinal.Models.Doctor>

<table>
    @foreach (var doctor in Model)
    {
        <tr>
            <th>User Email</th>
            <td>@doctor.UserEmail</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>@doctor.Password</td>
        </tr>
        
        <tr>
            <th>Emergency Contact Information</th>
            <td>@doctor.EmergencyContactInformation</td>
        </tr>
        <tr>
            <th>Doctor ID</th>
            <td>@doctor.DoctorId</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@doctor.Name</td>
        </tr>
        <tr>
            <th>Specialization</th>
            <td>@doctor.Specialization</td>
        </tr>
        <tr>
            <th>Working Days and Hours</th>
            <td>@doctor.WorkingDaysAndHours</td>
        </tr>
        <tr>
            <th>Phone Number</th>
            <td>@doctor.PhoneNumber</td>
        </tr>
        <tr>
            <th> Hospital</th>
            <td>@doctor.HospitalName</td>
        </tr>
        <!-- Other properties... -->
        <tr>
            <td colspan="2"><hr /></td> <!-- Optional: Adds a horizontal line between doctor entries -->
        </tr>
    }
</table>
