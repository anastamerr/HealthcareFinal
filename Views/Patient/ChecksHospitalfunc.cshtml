@model List<HealthcareFinal.Models.ChecksHospitalDocs>

@{
    ViewBag.Title = "Hospital Details";
}

<h2>Hospital Details</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Hospital Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.hospital_name</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hospitals found for the entered Doctor ID.</p>
}
